{
  "name": "nip05-backend",
  "version": "1.0.0",
  "private": false,
  "license": "UNLICENSED",
  "author": "christian.ellerbrock@inbayern.net",
  "repository": {
    "url": "https://github.com/ChristianEllerbrock/a001-backend",
    "type": "github"
  },
  "description": "",
  "keywords": [],
  "main": "index.js",
  "prisma": {
    "schema": "src/prisma/schema.prisma",
    "seed": "ts-node src/prisma/seed.ts"
  },
  "scripts": {
    "cp-views": "copyfiles --flat src/views/* dist/views",
    "clean": "rimraf -rf dist",
    "prebuild": "npm run clean",
    "build": "npx tsc",
    "postbuild": "npm run cp-views",
    "build:debug": "npm run clean && npx tsc",
    "start": "node dist/index.js",
    "dev": "npm run clean && npm run cp-views && concurrently \"npx tsc --watch\" \"nodemon --inspect src/index.ts\"",
    "dev2": "npm run clean && npm run cp-views && concurrently --kill-others \"npx tsc -w\" \"nodemon -q -w dist dist/index.js\"",
    "kill": "fuser 4000/tcp -k"
  },
  "dependencies": {
    "@azure/arm-communication": "^4.0.0",
    "@azure/communication-email": "^1.0.0",
    "@azure/identity": "^3.3.2",
    "@azure/keyvault-secrets": "^4.7.0",
    "@azure/service-bus": "^7.8.1",
    "@noble/curves": "^1.0.0",
    "@noble/hashes": "^1.3.0",
    "@prisma/client": "^5.8.1",
    "@scure/base": "^1.1.1",
    "axios": "^1.2.2",
    "class-validator": "^0.14.0",
    "concurrently": "^7.5.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "graphql": "^16.8.1",
    "graphql-http": "^1.22.0",
    "graphql-scalars": "^1.20.1",
    "joi": "^17.11.1",
    "luxon": "^3.2.1",
    "multer": "^1.4.5-lts.1",
    "node-cache": "^5.1.2",
    "node-fetch": "^2.6.9",
    "nostr-tools": "^2.1.5",
    "redis": "^4.6.13",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "type-graphql": "2.0.0-beta.6",
    "unique-names-generator": "^4.7.1",
    "uuid": "^9.0.0",
    "websocket-polyfill": "^0.0.3",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.14",
    "@types/luxon": "^3.2.0",
    "@types/multer": "^1.4.9",
    "@types/node": "^18.11.5",
    "@types/node-fetch": "^2.6.2",
    "@types/uuid": "^9.0.0",
    "@types/ws": "^8.5.4",
    "copyfiles": "^2.4.1",
    "nodemon": "^2.0.20",
    "prisma": "^5.8.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "nodemonConfig": {
    "execMap": {
      "ts": "node --require ts-node/register/transpile-only"
    }
  }
}
